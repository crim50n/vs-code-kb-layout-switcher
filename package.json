{
    "name": "kb-layout-switcher",
    "displayName": "Keyboard layout switcher",
    "description": "Changes keyboard layout of selected text",
    "version": "0.1.3",
    "publisher": "kleach",
    "galleryBanner": {
        "color": "#0A1E26",
        "theme": "dark"
    },
    "icon": "img/logo.png",
    "repository": {
        "url": "https://github.com/kleach/vs-code-kb-layout-switcher"
    },
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "keyboard",
        "layout",
        "language",
        "typo",
        "mistake"
    ],
    "activationEvents": [
        "onCommand:kb-layout-switcher.switch"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "kb-layout-switcher.switch",
                "title": "Switch keyboard layout"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn compile && yarn lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.2",
        "@types/mocha": "^7.0.2",
        "@types/node": "^14.0.11",
        "@types/vscode": "^1.32.0",
        "@typescript-eslint/eslint-plugin": "^3.1.0",
        "@typescript-eslint/parser": "^3.1.0",
        "eslint": "^7.1.0",
        "glob": "^7.1.6",
        "mocha": "^7.2.0",
        "typescript": "^3.9.5",
        "vscode-test": "^1.4.0"
    }
}
